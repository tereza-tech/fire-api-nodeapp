{
  "compilerOptions": {
    "composite": true,
    "target": "es2019",
    "module": "esnext",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist/",
    "rootDirs": ["./src", "./public/api"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitOverride": false,
  },
  "include": ["src/**/*.ts", "src/*.ts", "public/api/*.ts"],
  "exclude": [""]
}